<% if notice.present? %>
  <article class="message is-success">
    <div id="notice" class="message-body">
     <%= notice %>
    </div>
  </article>
<% end %>

<article class="message is-dark">
  <div class="message-header">
    <p>Universidades</p>
  </div>
 </article> 

  <div class="box">
   <div class="field is-horizontal">
     <%= search_form_for @q do |f| %>

     <div class="field-body">
       <div class="field">
         <label class="label">Nome</label>
         <div class="control">
           <%= f.search_field :name_cont,label: false ,class: 'input'%>
         </div>
       </div>
       <div class="field">
         <label class="label">Nota Geral</label>
         <div class="control">
           <%= f.search_field :geral_rate_eq,label: false ,class: 'input'%>
         </div>
       </div>
     </div>
     <br>
   </div>
 </div>

   <div class="field is-horizontal">
     <div class="field-body">
       <div class="field">
         <div class="control">
           <%= f.submit class: "button is-primary" %>
         </div>
       </div>
     </div>
   </div>
  <% end %>
<br>

  <div class="box">
    <div class="columns is-gapless is-multiline is-mobile">
      <%= paginate @universities %>
    </div>
 </div>

<table class="table is-narrow">
  <thead>
    <tr>
      <th>Name</th>
      <th>Nota Geral</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.name %></td>
        <td><%= university.geral_rate %></td>
        <td>
            <%= render 'shared/action_links', object: university %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar uma Nova Universidade', new_university_path ,class: "button is-info" %>
